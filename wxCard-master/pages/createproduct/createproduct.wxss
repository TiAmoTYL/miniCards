/* @import "../../iconfont/iconfont.wxss"; */
@import "../../iconfont_new/iconfont.wxss";

.card-input {
  border-bottom: 0rpx solid #e0e0e0;
  padding: 23rpx 0;
  font-size: 14rpx;
  width: 100%;
}

.card-input:last-child {
  border: 0;
}

.card-inputlabel {
  display: flex;
}

.card-inputlabel .label {
  margin-right: 5rpx;
  padding: 23rpx 0;
  font-size: 14rpx;
}

.card-inputlabel .label.icon-location {
  font-size: 20rpx;
}

.card-formitem {
  background: #fff;
  padding: 0 23rpx;
  /* border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0; */
  margin-top: 23rpx;
}

.card-formitem .card-user {
  display: flex;
  align-items: center;
  position: relative;
}

.card-user .eng {
  position: absolute;
  top: 0;
  padding-top: 23rpx;
  right: 0;
  z-index: 999;
}

.card-user .eng .iconfont {
  font-size: 48rpx;
  color: #757575;
}

.card-user  .sign {
  width: 120rpx;
  height: 120rpx;
  border-radius: 5rpx;
  margin-right: 23rpx;
  flex: 0 0 120rpx;
}

.card-user .sign image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 5rpx;
  border: 1rpx solid #e0e0e0;
}

.card-user .message {
  flex: 1;
}

.card-user .btn-verify {
  position: absolute;
  z-index: 999;
  right: 0;
  bottom: 23rpx;
  border: 1rpx solid #72a92c;
  color: #72a92c;
  border-radius: 5rpx;
  padding: 6rpx 22rpx;
  font-size: 13rpx;
}
/* 图片 */
.items {
  width: 33%;
  float: left;
  margin: 30rpx 0 60rpx 0;
}
.item image{
	width:180rpx;
	height:186rpx;
	display:block;
	margin:0 auto;
  
}

/*图片  */
/*画廊*/
.gallery {
	/*margin-bottom: 100rpx;*/
	display: flex;
	justify-content: flex-start;
	flex-wrap: wrap;
}

/*每张图片所占容器*/
.item {
	position: relative;
	margin: 5rpx;
}

/*删除按钮*/
.delete {
	position: absolute;
	height: 20rpx;
	bottom: 0;
	width: 100%;
	background: #ccc;
	opacity: .8;
}

.delete image {
	position: absolute;
	width: 20rpx;
	height: 20rpx;
}

.textarea-container {
	background: white;
	padding: 10rpx;
}

