/* pages/carddetails/carddetails.wxss */
@import "../template/template.wxss";
@import "../createcard/createcard.wxss";
/* @import "../mycard/mycard.wxss"; */
@import "../../app.wxss";

.card-head .sign {
  width: 180rpx;
  height: 180rpx;
  border-radius: 5rpx;
}

.card-head .sign image {
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

.card-head .title {
  width: 80%;
}

.card-head .title .name {
  margin-left: 20rpx;
  font-size: 16sp;
  color: white;
  display: block;
}

.card-head .title .label {
  color: white;
  font-size: 8sp;
}

.inter-line {
  font-size: 15px;
  margin-bottom: 10px;
  margin-top: 10px;
  font-weight: bold;
  margin-left:2%;

}

.inter-line i {
  position: absolute;
  left: 90%;
}

.item-carDetailAction-white {
  width: 33.3%;
  background: #fff;
  border: 1rpx solid #e0e0e0;
  border-right: 0px;
}

.item-carDetailAction-white  .item-up {
  font-size: 15px;
  display: flex;
  justify-content: center;
  margin-top:10%;

}

.item-carDetailAction-white  .item-down {
  font-size: 10px;
  display: flex;
  justify-content: center;
}

.item-carDetailAction-green {
  width: 33%;
  background: #5fc09e;
  border-right: 0px;
}
.item-carDetailAction-green .text {
  font-size: 15px;
  /* margin: 8%; */
  color:white;
  margin-top:15%;
  text-align:center;



}
.item-carDetailAction-blue {
  width: 33%;
  background: #4f5c7d;
  border-right: 0px;
}
.item-carDetailAction-blue .text {
  font-size: 15px;
  margin: 15%;
  color:white;
   text-align:center;

}
.shara-action{
line-height:100%;
height:100%;
background:#fff;
border:0px #fff solid;
border-color: #fff

}
.share-action button::after {
  border:none;
   border-radius: 0; 
} 
button[class='share-action']::after {
  border: 0;
  border-radius: 0; 
} 
.label-text {
    display:block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
    word-break: break-all
}


.myCardOpera {
display:flex;
justify-content:center;
flex-wrap:wrap;
}
.pro-text{
  padding-right:70rpx;
padding-left:80rpx;

}
